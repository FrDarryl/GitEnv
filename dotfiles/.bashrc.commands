yt () {
    for url in "$@"
    do
        filename=`youtube-dl --get-filename "${url}"`
        utcdate=`date +%Y%m%dT%H%M`
        tag="${utcdate}|url:${url}|filename:${filename}"
        if [ -e ${filename} ];
        then
            echo "${tag} already downloaded."
            continue
        fi
        attempts=1
        while [[ ! -e ${filename} ]] && [[ ${attempts} -lt 10 ]]
        do
            echo "Downloading ${filename} (attempt ${attempts})"
            youtube-dl "${url}"
            attempts=$((${attempts} + 1))
        done
        if [ -e ${filename} ];
        then
            echo "${tag}" >> __yt
            echo "${tag} downloaded; required ${attempts} attempts."
        else
            echo "${tag} could not be downloaded after ${attempts} attempts."
        fi
    done
}
